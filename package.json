{
    "name": "fsm-vir",
    "version": "0.0.5",
    "description": "The heroic finite state machine package.",
    "keywords": [
        "fsm",
        "finite state machine",
        "state machine",
        "node",
        "nodejs",
        "js",
        "javascript",
        "typescript",
        "ts",
        "vir"
    ],
    "homepage": "https://github.com/electrovir/fsm-vir#readme",
    "bugs": {
        "url": "https://github.com/electrovir/fsm-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electrovir/fsm-vir.git"
    },
    "license": "MIT",
    "author": "electrovir (github.com/electrovir)",
    "main": "dist/index.js",
    "scripts": {
        "prepublishOnly": "rm -rf dist && rm -rf node_modules && npm install && npm run test && npm run spellcheck",
        "test": "tsc && test-vir \"./**/!(*.type).test.js\"",
        "spellcheck": "cspell --no-progress --unique \"./**/*\"",
        "test:full": "npm run test && npm run spellcheck -- --no-progress && npm run format:check",
        "format": "npm run format:base -- --write",
        "format:base": "prettier --ignore-path .gitignore \"./{,!(dist)/**/}*.+(ts|json|html|css)\"",
        "format:check": "npm run format:base -- --check"
    },
    "devDependencies": {
        "@types/node": "^14.14.41",
        "cspell": "^5.3.12",
        "prettier": "^2.2.1",
        "prettier-plugin-jsdoc": "^0.3.20",
        "prettier-plugin-organize-imports": "^1.1.1",
        "prettier-plugin-packagejson": "^2.2.10",
        "prettier-plugin-sort-json": "^0.0.2",
        "test-vir": "^0.0.12",
        "typescript": "^4.2.4"
    }
}
